@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Pedidos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mesa)
            </th>

            <th>
                Pago
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mesa)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Pago)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Total)
            </td>

            <td>
                @*<a asp-action="Details" asp-route-id="@item.Id" class="bi bi-binoculars-fill text-primary"></a> |*@
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a> |
            </td>
        </tr>
}

    </tbody>
</table>
