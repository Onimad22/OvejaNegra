            </div>
            <div class="form-group">
                <label asp-for="HoraS" class="control-label"></label>
                <input asp-for="HoraS" class="form-control" />
                <span asp-validation-for="HoraS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="HoraT" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Jornal" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Bono" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Total" class="form-control" />
            </div>
            <div class="form-group form-check">
                <input type="hidden" class="form-check-input" asp-for="Pago" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

